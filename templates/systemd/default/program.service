[Unit]
{{#description}}
Description={{{ description }}}
{{/description}}

[Service]
Type=simple
User={{{ user }}}
Group={{{ group }}}
ExecStart={{{program}}} {{{shell_args}}}
{{#prestart}}
ExecStartPre=/lib/systemd/system/{{{name}}}-prestart.sh
{{/prestart}}
{{#stop}}
ExecStop={{{stop}}}
{{/stop}}
Restart=always

[Install]
WantedBy=multi-user.target
